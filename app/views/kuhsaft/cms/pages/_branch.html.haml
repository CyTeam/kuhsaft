- unless pages.blank?
  .branch-list
    - pages.each do |page|
      .branch.row{ :'data-id' => page.id, :'data-put-url' => kuhsaft.page_path(page) }
        .span9
          = link_to page.title.presence || t('.not_translated'), kuhsaft.edit_page_path(page), :class => 'btn btn-link'
        .span3
          .pull-right
            - if page.childs.empty?
              = link_to kuhsaft.page_path(page), :confirm => t('.confirm', :page_title => page.title), :method => :delete, :class => 'btn btn-small btn-danger' do
                %i.icon-trash.icon-white

            = link_to kuhsaft.new_page_path(:parent_id => page.id), :class => 'btn btn-small' do
              %i.icon-plus-sign
              = t('.add')

      - unless page.childs.empty?
        = render :partial => 'branch', :locals => { :pages => page.childs }
